<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.quasardb</groupId>
  <artifactId>jni</artifactId>
  <packaging>jar</packaging>
  <version>${qdb.api.version}</version>

  <description>
    API for the JNI components of the QuasarDB API for Java. Should not be included directly.
  </description>

  <url>http://www.quasardb.net/</url>
  <licenses>
    <license>
      <name>3-Clause BSD License</name>
      <url>https://opensource.org/licenses/BSD-3-Clause</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <scm>
    <url>https://github.com/bureau14/qdb-api-java</url>
    <connection>scm:git:git://github.com/bureau14/qdb-api-java.git</connection>
    <developerConnection>scm:git:git@github.com:bureau14/qdb-api-java.git</developerConnection>
  </scm>
  <developers>
    <developer>
      <email>leon@quasardb.net</email>
      <name>Leon Mergen</name>
      <url>https://github.com/solatis</url>
      <id>solatis</id>
    </developer>
  </developers>

  <distributionManagement>
    <snapshotRepository>
      <id>ossrh</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>

  <build>
    <plugins>
      <plugin>
        <groupId>org.sonatype.plugins</groupId>
        <artifactId>nexus-staging-maven-plugin</artifactId>
        <version>1.6.7</version>
        <extensions>true</extensions>
        <configuration>
          <serverId>ossrh</serverId>
          <nexusUrl>https://oss.sonatype.org/</nexusUrl>
          <autoReleaseAfterClose>true</autoReleaseAfterClose>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.1.0</version>
        <configuration>
          <skipIfEmpty>true</skipIfEmpty>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.7.0</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>${project.basedir}/target/jni-${qdb.api.version}-linux-x86_64.jar</file>
                  <type>jar</type>
                  <classifier>linux-x86_64</classifier>
                </artifact>
                <artifact>
                  <file>${project.basedir}/target/jni-${qdb.api.version}-osx-x86_64.jar</file>
                  <type>jar</type>
                  <classifier>osx-x86_64</classifier>
                </artifact>
                <artifact>
                  <file>${project.basedir}/target/jni-${qdb.api.version}-freebsd-x86_64.jar</file>
                  <type>jar</type>
                  <classifier>freebsd-x86_64</classifier>
                </artifact>
                <artifact>
                  <file>${project.basedir}/target/jni-${qdb.api.version}-windows-x86_64.jar</file>
                  <type>jar</type>
                  <classifier>windows-x86_64</classifier>
                </artifact>
                <artifact>
                  <file>${project.basedir}/target/jni-${qdb.api.version}-windows-x86_32.jar</file>
                  <type>jar</type>
                  <classifier>windows-x86_32</classifier>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

</project>
